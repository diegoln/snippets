# Development Environment Configuration
# Copy this file to .env.local and update values as needed

# Database Configuration - Local PostgreSQL via Docker
DATABASE_URL="postgresql://app_user:dev_password@localhost:5433/snippets_db?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET="dev-secret-key-for-local-development-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# LLM Configuration (development)
# Leave empty to use mock responses, or add your API key for real testing
GEMINI_API_KEY=""

# Integration Testing (optional)
# Add these only if you want to test real integrations in development
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Development flags
NODE_ENV="development"