#!/usr/bin/env sh

# Pre-commit hook to ensure code quality before any commit
echo "ğŸ” Running pre-commit checks..."

# 1. Run fast TypeScript compilation check
echo "ğŸ“¦ Checking TypeScript compilation..."
npm run typecheck:quick
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed. Please fix errors before committing."
  exit 1
fi

# 2. Run linting
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
fi

# 3. Check property consistency across codebase
echo "ğŸ”— Checking property consistency..."
node scripts/check-property-consistency.js
if [ $? -ne 0 ]; then
  echo "âŒ Property consistency check failed. Please fix errors before committing."
  exit 1
fi

# 4. Validate API contracts (if TypeScript is available)
if command -v npm list typescript >/dev/null 2>&1; then
  echo "ğŸ“‹ Validating API contracts..."
  node scripts/validate-api-contracts.js
  if [ $? -ne 0 ]; then
    echo "âŒ API contract validation failed. Please fix errors before committing."
    exit 1
  fi
fi

# 5. Run basic tests
echo "ğŸ§ª Running tests..."
node run-basic-tests.js
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"