#!/usr/bin/env sh

# Lightweight pre-commit hook - only checks syntax to prevent broken commits
# Full validation happens in GitHub Actions CI

# Quick TypeScript syntax check on modified files only
echo "⚡ Quick syntax check on modified files..."
node scripts/quick-typecheck.js
if [ $? -ne 0 ]; then
  echo "❌ TypeScript syntax errors found. Please fix before committing."
  echo "💡 Tip: Run 'npm run check:dev' for full validation"
  exit 1
fi

echo "✅ Syntax check passed!"
echo "📝 Full validation will run in CI after push"